                <seq> <!-- Showing photos in sequence, using the <seq> ("sequence") SMIL tag.-->
                  <seq dur="18s">
                    <img src="fruit.jpg" dur="10s"/>
                    <img src="organic.jpeg" dur="10s"/>
                    <img src="salad.jpg" dur="10s"/>
                  </seq>
                  <seq>
                    <seq dur="2s"/>
                    <seq dur="15s">
                      <seq>
                        <img src="vegetables.jpeg" dur="10s"/>
                        <img src="veggie.jpg" dur="10s"/>
                      </seq>
                    </seq>
                  </seq>
                </seq>
    </body>
